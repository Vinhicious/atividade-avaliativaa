#include <stdio.h>
int main() {

  float salario = 0, somaSalario = 0, maiorSalario = 0, mediaPopulacao;
  int filhos = 0, contador = 0, percSalario = 0, ganho, quantiFilhos = 0;

  do{
    printf("\nInsira o Salario: ");
    scanf("%f", &salario);
    if(salario > 0){
      if(salario > maiorSalario){
      maiorSalario = salario;
      }
      if(salario <= 101){
      ganho ++;
      }
      printf("\nQuantidade de Filhos: ");
      scanf("%d", &filhos);
      contador ++;
      somaSalario += salario;
      quantiFilhos += filhos;
    }
    }while(salario >= 0);

  percSalario = (contador/100) * percSalario;
  mediaPopulacao = quantiFilhos / contador;
  salario = somaSalario / contador;
  printf("\nMedia Salarial da Populacao: %.2f", salario);
  printf("\nMedia de Filhos: %.1f", mediaPopulacao);
  printf("\nMaior Salario: %.2f", maiorSalario);
  printf("\nPercentual de Pessoa que recebem ate R$100,00: %d", ganho);
}
